dcolor = #F0F0F0
bcolor = #E8E8E8
.flex
	display flex

flex()
	position relative
	display flex
	flex-wrap nowrap
.start
	justify-content flex-start
	align-items flex-start
.center
	justify-content center
	align-items center
flex-center()
	display flex
	justify-content center
	align-items center


.no-pad
	padding 0px !important



//BUTTONS
.dark-button
	background #151515
	color #F5F5F5
	transition background 0.3s ease-out,color 0.3s ease-out
	i 
		background #151515
		transition color 0.3s ease-out
.dark-button:hover
	i	
		color #DFDFDF
.dark-button-active
	i
		color #DFDFDF




::-webkit-scrollbar
	width: 5px;
	background: #0C0C0C;
	
::-webkit-scrollbar-thumb {
    -webkit-border-radius: 3px;
    border-radius: 3px;
    background: linear-gradient(45deg,#FF0645,#FF310D);
    //-webkit-box-shadow: inset 0 0 2px #FF310D; 
}





//THEMES
.light
	background #F5F5F5
	color #151515

.dark
	background #151515
	color #F5F5F5


box()
	flex-center()
	margin 1px
	padding 5px
	margin 3px
	outline: none;
	border-radius 2px
	border 1px solid;
	transition background 0.3s ease-out
	font-size 12px


.light-box
	box()
	color: #000
	background #FFF
	border-color bcolor
	border-radius 2px
.light-box2
	box()
	color rgba(0, 0, 0, 0.65)
	background #F0F0F0
	border-color: bcolor
	border-radius 2px
.light-box2:hover
	background #F7F7F7;
	
.light-box3
	box()
	color rgba(0, 0, 0, 0.75)
	background #EBEBEB
	border-color: #E4E4E4
	border-radius 2px


.dark-box
	box()
	color rgba(255, 255, 255, 0.81)
	background #595959
	border-color: #2E2E2E
.dark-box2
	box()
	color rgba(255, 255, 255, 0.87)
	background #2D2D2D
	border-color: #030303



.grow
	flex-grow 1





