	color rgba(0,0,0,0.1)
	





//LAYOUTS
.flex
	position relative
	display flex
	flex-wrap nowrap
.flex-center
	display flex
	align-items center
	align-content center
	justify-content center
	position relative
	flex-wrap nowrap
.align-center
	align-items center
.flex-start
	align-items inherit
	align-content flex-start		
	flex-wrap wrap !important
.flex-stretch
	align-items stretch
	align-content stretch	
	flex-wrap no-wrap !important
.stretch-self
	align-self stretch
.align-start
	align-self flex-start
.button
	display flex
	align-items center
	align-content center
	justify-content center
	font-size 0.7em
.split-right
	flex-direction row
.split-left
	flex-direction row-reverse
.split-down
	flex-direction column
	

.three
	perspective 1000px


//SIZES
.large
	width 150px
	height 150px
.medium
	min-width 60px
	min-height 60px
.small
	flex-grow 0
	width 35px
	height 35px

.image-full
	width 100%
	height auto
.full
	width 100%
	height 100%
.abs
	position absolute
.medium-text
	font-size 15px
.large-text
	font-size 20px
.small-text
	font-size 12px
	


//SEPERATORS
.column-well-small
	padding-top 5px
	padding-bottom 0px
.column-split
	padding 2px
	border-bottom 1px solid bcolor
.row-split
	padding 3px
	border-right 1px solid bcolor

.outer-well
	margin 20px
.outer-well-small
	margin 5px

.inner-well
	padding 20px
.inner-well-small
	padding 5px
.inner-well-tiny
	padding 2px



.dark-border
	border-color rgba(0,0,0,0.4)
.light-border
	border-color bcolor


//THINIFIERS
.thin-dark
	text-shadow inset 1px 1px 0px #000, inset -1px -1px 0px #000



//SHAPES
.rectangle
	width auto !important
.circle
	border-radius 100%

.leaf
	border-radius: 50% 0% 50% 0%;
.tag
	cursor: default
	position relative
	padding-left: 15px;
	position relative
	font-size 12px
	width auto !important
.tag:before
	content " "
	position absolute
	left: 2px;
	top 45%
	width 4px
	height 4px
	border-radius 100%
	background: #fff;
	border: 1px solid bcolor;



.thick-border
	border 1px solid #fff
	box-shadow: 0px 0px 1px rgba(255, 255, 255, 0.17);

.thick-border-white
	box-shadow: 0px 0px 1px rgba(0, 0, 0, 0.33);
	border: 1px solid #FFF;

//ELEMENTS
input
	box()
	border 0px 
	border-radius 0px
	border-right 1px solid  bcolor
	border-left 1px solid bcolor

	margin 0px
	color rgba(0,0,0,0.7)
	font-family: Dosis;
	padding-left 14px
	//transition background 0.5s ease-out
	background rgba(252,252,252,1)
	
input:focus
	background rgba(255,255,255,1)
::-webkit-input-placeholder
	color rgba(25,25,0,0.25)



//ANIMATION
.transform-in
	transition transform  ease-in
.transform-out
	transition transform  ease-out
.transform-inout
	transition transform  cubic-bezier(.59,0,.07,1)
.fast
	transition-duration 0.25s
.normal
	transition-duration 1s




//VISIBLITY
.hidden
	visibility hidden
.visible
	visibility initial

.abs
	position absolute
	top 0
	left 0



